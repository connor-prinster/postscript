%!

<< /PageSize [1000 1000] >> setpagedevice

/inch {20 mul} def

/f {
    newpath
    0 0 moveto
    10 0 lineto
    stroke
} def

/l
{
    30 rotate
} def

/r {
    -30 rotate
} def

/start {
    gsave
} def

/end {
    grestore
} def

25 inch 25 inch translate

/snowflake {

    moveto

    dup 0 eq % true or false on stack depending on 'dup'
    {
        1 sub % n - 1
        snowflake
        l
        snowflake
        r r
        snowflake
        l
        snowflake   
    } if
    
    pop % if nothing there
}